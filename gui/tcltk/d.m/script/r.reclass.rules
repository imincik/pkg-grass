#%Module
#%  description: r.reclass.rules - Use rules to reclassify categories in raster map
#%End
#%option
#% key: input
#% type: string
#% gisprompt: old,cell,raster
#% description: Name of raster map to reclassify
#% required : yes
#%end
#%option
#% key: output
#% type: string
#% gisprompt: old,cell,raster
#% description: Name of reclassified raster map
#% required : yes
#%end


if  [ -z "$GISBASE" ] ; then
 echo "You must be in GRASS GIS to run this program."
 exit 1
fi   

if [ "$1" != "@ARGS_PARSED@" ] ; then
  exec g.parser "$0" "$@"
fi

eval `exec "$GISBASE/etc/grass-xterm-wrapper" -e r.reclass input=$GIS_OPT_INPUT output=$GIS_OPT_OUTPUT`
